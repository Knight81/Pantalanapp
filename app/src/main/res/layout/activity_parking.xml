<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/RelativeLayParking">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/backgroundpant"
        android:id="@+id/backroundImage"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boatImage"
        android:src="@drawable/boat"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Left"
        android:id="@+id/LeftSensor"
        android:layout_alignTop="@+id/RightSensor"
        android:layout_toStartOf="@+id/boatImage"
        android:layout_marginEnd="113dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Right"
        android:id="@+id/RightSensor"
        android:layout_marginStart="131dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/boatImage" />

</RelativeLayout>